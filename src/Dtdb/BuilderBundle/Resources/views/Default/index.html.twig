{% extends 'DtdbBuilderBundle::layout.html.twig' %}

{% block head %}
<script src="{{ asset('/web/bundles/dtdbbuilder/js/dtdb.deck_browser.js') }}"></script>
<script src="{{ asset('/web/bundles/dtdbbuilder/js/dtdb.smart_filter.js') }}"></script>
<script src="{{ asset('/web/bundles/dtdbbuilder/js/index.js') }}"></script>

<script type="text/javascript">

var Outfit = null,
	Decklist = {{ decklist|json_encode|raw }},
	DeckDB = TAFFY([Decklist]),
	SelectedDeck = DeckDB().first(),
	Url_GangImage = '{{  asset('/web/bundles/dtdbbuilder/images/xxx-20.png') }}',
	DisplaySort = 'suit';

</script>
{% endblock %}
{% block body %}

<div class="container" id="index_page">
<div class="row">


<div class="col-lg-8">

<div class="page-header">
<h1 style="font-size:72px">DoomtownDB</h1>
<p class="">You can explore the public <a href="{{ path('decklists_list', {type:'popular'}) }}">decklists</a> or start building your own <a href="{{ path('decks_list') }}">decks</a>.</p>
</div>

<div class="row">
<div class="col-md-8 col-md-push-4">

{% if decklist %}
<div id="highlight" class="decklist">

<h2 class="section">Decklist of the week </h2>
<h3><a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a></h3>

<!-- Outfit and Stats -->
<div class="row">
	<div class="col-sm-2">
		<img id="img_outfit" src="" class="img-responsive  hidden-xs">
	</div><!-- /.col-md-3 -->
	<div class="col-sm-10">
        <h4 id="outfit"></h4>
        <div id="startingnumbers"></div>
		<div id="latestpack" class="small"></div>
	</div>
</div>
<!-- Identity and Stats -->

<div id="deck-content" class="row"></div>

<h4 class="decklist-author author">
    Description by the author:
    <a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username|e('url')}) }}" class="username {{ decklist.usercolor }}">{{ decklist.username }}</a>
    {% if decklist.donation > 0 %}<span class="glyphicon glyphicon-gift donator" title="DoomtownDB Gracious Donator"></span>{% endif %}
    <small title="User Reputation" class="reputation">{{ decklist.reputation }}</small>
</h4>
{{ decklist.description|raw }}

</div> <!-- #highlight -->
{% endif %}


</div>
<div class="col-md-4 col-md-pull-8"  id="recent_decklists">

	<h3 class="section">Last 10 decklists <a href="{{ path('decklists_list', {type:'recent'}) }}" class="small">more</a></h3>
	<table class="table table-decklists">
	{% for decklist in decklists %}
	<tr>
	<td>
		<img src="/web/bundles/dtdbcards/images/cards/en/{{ decklist.code }}.jpg" style="width:52px">
	</td>
	<td class="decklists">
	<div>
			<a class="decklist-name" href="{{ path('decklist_detail', { 'decklist_id': decklist.id, 'decklist_name': decklist.prettyname|e('url') }) }}">{{ decklist.name }}</a>
	</div>
	<div class="small">
			<i>{{ decklist.lastpack }}</i>
	</div>
	<div class="author small">
		<a href="{{ path('user_profile_view', {user_id:decklist.user_id,user_name:decklist.username|e('url')}) }}" class="{{ decklist.usercolor }}">{{ decklist.username }}</a>
		{% if decklist.donation > 0 %}<span class="glyphicon glyphicon-gift donator" title="DoomtownDB Gracious Donator"></span>{% endif %}
		<small class="reputation">{{ decklist.reputation }}</small>
	</div>
	<div class="small decklist-social">
		<span class="glyphicon glyphicon-heart social-icon-like"></span> {{ decklist.nbvotes }}
		<span class="glyphicon glyphicon-star social-icon-favorite"></span> {{ decklist.nbfavorites }}
		<span class="glyphicon glyphicon-comment social-icon-comment"></span> {{ decklist.nbcomments }}
	</div>
	</td>
	</tr>
	{% endfor %}
	</table>

</div><!-- #recent_decklists -->

</div>

</div>

<div class="col-lg-4" id="right-column">



<div id="card_search">
	<h3 class="section">Card search <a href="{{ path('cards_about') }}" class="small">?</a></h3>
	<form method="GET" action="{{ path('cards_processSearchForm') }}" role="form">
	<div class="form-group">
	    <input type="text" class="form-control" id="card_search_form" name="q" placeholder="Enter card name or query" autocomplete="off" tabindex="1">
	  </div>
	</form>
	<table class="table table-condensed table-striped">
	<tbody id="card_search_results">
	</tbody>
	</table>
</div><!-- #card_search -->

<div class="discord-widget">
	<script type="text/javascript">
		discordWidget.render();
	</script>
</div>

<div id="recent_other">
		<h3 class="section">Card reviews <a href="{{ path('card_reviews_list') }}" class="small">more</a></h3>
		<div class="reviews">
		{% for review in reviews %}
		<article class="review">
		<div>
		  <span class="pull-right"><span class="glyphicon glyphicon-heart social-icon-like"></span> {{ review.nbvotes }}</span>
		  <a href="{{ path('cards_zoom', {card_code:review.card_code}) }}#review-{{ review.id }}" class="card">{{ review.card_title }}</a>
		</div>
		<div class="small">
    		by <a href="{{ path('user_profile_view', {user_id:review.user_id,user_name:review.username|e('url')}) }}" class="username {{ review.usercolor }}">{{ review.username }}</a>
    		{% if review.donation > 0 %}<span class="glyphicon glyphicon-gift donator" title="DoomtownDB Gracious Donator"></span>{% endif %}
    		<small class="reputation">{{ review.reputation }}</small>
    	</div>
		<p><small>{{ review.rawtext|raw }}</small></p>
		</article>
		{% endfor %}
		</div>
</div><!-- #recent_other} -->
<div style="padding:30px;width:360px;height:310px;background:transparent;position:relative">

<div style="position:absolute;width:300px;height:250px;background:lightgrey;color:white;font: 24px/36px monospace;text-align:center;padding-top:50px">
DoomtownDB is supported by ads. Please whitelist us.
</div>

<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- decks -->
<ins class="adsbygoogle"
     style="display:inline-block;width:300px;height:250px"
     data-ad-client="ca-pub-2547812549082492"
     data-ad-slot="8975445365"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
</div>

</div><!-- #right-column -->

</div> <!-- .row -->

</div> <!-- .container -->

{% endblock %}

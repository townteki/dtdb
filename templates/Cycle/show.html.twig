{% extends 'base.html.twig' %}
{% block body -%}
    <div class="container-fluid main">
        <div class="row">
            <div class="col">
                <div class="page-header">
                    <h1>Cycle</h1>
                </div>
                <table class="record_properties">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ entity.code }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Number</th>
                        <td>{{ entity.number }}</td>
                    </tr>
                    </tbody>
                </table>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('admin_cycle') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_cycle_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                    <li>
                        <form action="{{ path('admin_cycle_delete', { 'id': entity.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE"/>
                            {{ form_widget(delete_form) }}
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

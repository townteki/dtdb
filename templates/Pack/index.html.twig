{% extends 'base.html.twig' %}
{% block body -%}
    <div class="container-fluid main">
        <div class="row">
            <div class="col">
                <div class="page-header">
                    <h1>Pack list</h1>
                </div>
                <table class="records_list">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Released</th>
                        <th>Size</th>
                        <th>Number</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('admin_pack_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.code }}</td>
                            <td>{{ entity.name }}</td>
                            <td>{% if entity.released %}{{ entity.released|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.size }}</td>
                            <td>{{ entity.number }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('admin_pack_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_pack_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a href="{{ path('admin_pack_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
